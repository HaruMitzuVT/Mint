{
  "name": "Singapura",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win portable",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "devDependencies": {
    "electron": "latest",
    "electron-builder": "latest"
  },
  "build": {
    "appId": "com.nova.SingapuraOS",
    "productName": "Nova Codename Singapura",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "portable",
      "icon": "build/beta.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/beta.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/beta.png"
    }
  }
}
